@model DebugViewModel
@inject IExerciseRepository _exerciseRepository
@inject IWorkoutRepository _workoutRepository

@{
    ViewData["Title"] = "Debug";
}

<button type="submit" class="btn btn-info btn-block" onclick="Home()">Back</button>

<br />
    <div class="container-fluid">
        <h1 class="h4 mb-3 font-weight-normal text-center">Debug</h1>

        <form>
            <div class="form-group">
                <label for="userID">User ID</label>
                <input class="form-control" id="userID" value="@ViewData["UserID"]" disabled />
            </div>

            <div class="form-group">
                <label for="userID">Records in Workout Table</label>
                <input class="form-control" id="userID" value="@ViewData["NumberOfWorkoutsForUserID"]" disabled />
            </div>

            <div class="form-group">
                <label for="userID">Convert String to DateTime</label>
                <input class="form-control" id="userID" value="@DateTime.Parse("07-31-2018")" disabled />
            </div>
        </form>

        <div id="accordion">

            <div class="card">
                <div class="card-header" id="headingOne">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            All Workout Records for Current User
                        </button>
                    </h5>
                </div>

                <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="card-body">
                        <label>Workout Table Contents (for current user)</label>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">WoID</th>
                                    <th scope="col">WoUserID</th>
                                    <th scope="col">WoExID</th>
                                    <th scope="col">WoSetCount</th>
                                    <th scope="col">WoRepCount</th>
                                    <th scope="col">WoWeightUsed</th>
                                    <th scope="col">WoDate</th>
                                </tr>
                            </thead>

                            @foreach (var x in Model.ListOfWorkoutsForUserID)
                            {
                                <tbody>
                                <td>@x.WoId</td>
                                <td>@x.WoUserID</td>
                                <td>@x.WoExID</td>
                                <td>@x.WoSetCount</td>
                                <td>@x.WoRepCount</td>
                                <td>@x.WoWeightUsed</td>
                                <td>@x.WoDate</td>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>

            </div>

            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                            All Workout Records for Current User on Given Date: @ViewData["WorkoutForUserOnDate"]
                        </button>
                    </h5>
                </div>

                <div id="collapseTwo" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                    <div class="card-body">
                        <label>Workout Table Contents for Current User on Date: @ViewData["WorkoutForUserOnDate"]</label>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">WoID</th>
                                    <th scope="col">WoUserID</th>
                                    <th scope="col">WoExID</th>
                                    <th scope="col">WoSetCount</th>
                                    <th scope="col">WoRepCount</th>
                                    <th scope="col">WoWeightUsed</th>
                                    <th scope="col">WoDate</th>
                                </tr>
                            </thead>

                            @foreach (var x in Model.ListOfWorkoutsForUserIDGivenDate)
                            {
                                <tbody>
                                <td>@x.WoId</td>
                                <td>@x.WoUserID</td>
                                <td>@x.WoExID</td>
                                <td>@x.WoSetCount</td>
                                <td>@x.WoRepCount</td>
                                <td>@x.WoWeightUsed</td>
                                <td>@x.WoDate</td>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>

            </div>


        </div>
    </div>