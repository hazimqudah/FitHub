@model FitFileExercisesModel

@{
    ViewData["Title"] = "Exercises";
}

<div class="container">
    <div class="alert alert-primary">
        <div class="glyphicon glyphicon-exclamation-sign"></div>
        <strong> Use this page to view and query the exercises.</strong>
    </div>
</div>

<div class="container">
    <h2 class="text-center">Exercises</h2><br />

    <div class="form-group">
        <label for="sel1">Exercise List:</label>
        <select class="form-control" id="sel1">
            @foreach (var p in Model.Exercises)
            {
                <option> @p.ExName </option>
            }
        </select>
    </div>

    <br />
</div>
<div class="container">
    <h2 class="text-center">Add Exercise</h2>

    <form action="/FitFile/Exercises" method="post">
        <div class="form-group">
            <label for="ID">ID:</label>
            <input type="text" class="form-control" name="ID" placeholder="(Automatically Generated)" disabled="true"/>
        </div>

        <div class="form-group">
            <label for="queryColumn">Exercise Name:</label>
            <input type="text" autocomplete="off" class="form-control" name="exerciseName" placeholder="Name"/>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>

    </form>
</div>





