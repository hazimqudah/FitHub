@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Manage your fitness profile</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="FitFile" asp-action="Index">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="FitFile" asp-action="Exercises">Exercises</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="FitFile" asp-action="Workouts">Workouts</a>
                </li>
            </ul>
        </div>

        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

