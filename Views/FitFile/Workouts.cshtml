@model  FitFileWorkoutsModel
@inject IExerciseRepository _exerciseRepository

@{
    ViewData["Title"] = "Workouts";
}

<div class="container">
    <div class="alert alert-primary">
        <div class="glyphicon glyphicon-exclamation-sign"></div>
        <strong> Use this page to manage your workouts.</strong>
    </div>

    @foreach(var x in _exerciseRepository.GetAllRows()) {
        <strong>@x.ExName</strong>
    }

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#home">History</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu1">Create</a>
            </li>
        </ul>

    <div class="tab-content">
        <div id="home" class="tab-pane fade show active">
            <br />
            <form action="/FitFile/Workouts" method="post">
                <div class="form-group">
                    <label for="sel1">Previous Workouts:</label>
                    <select class="form-control" id="SelectedWorkoutDateForUser" name="SelectedWorkoutDateForUser" onchange="this.form.submit()">
                        @foreach (var p in Model.WorkoutDatesForUser)
                        {
                            <option> @p.WoDate.ToString("MM/dd/yyyy") </option>
                        }
                    </select>
                </div>
            </form>

            @if (Model.WorkoutsOnSelectedDateForUser != null)
            {<br />
                <h2 class="text-center">Workout Details</h2><br />

                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Sets</th>
                            <th>Reps</th>
                            <th>Weight</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model.WorkoutsOnSelectedDateForUser)
                        {
                            <tr>
                                <td>@p.WoDate.ToString("MM-dd")</td>
                                <td>@Model.FindExerciseNameFromID(p.WoExID)</td>
                                <td>@p.WoSetCount</td>
                                <td>@p.WoRepCount</td>
                                <td>@p.WoWeightUsed</td>

                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {

            }
        </div>
        <div id="menu1" class="tab-pane fade">
            <h3>Menu 1</h3>
            <div class="row clearfix">
                <div class="col-md-12 column">
                    <table class="table table-bordered table-hover" id="tab_logic">
                        <thead>
                            <tr>
                                <th class="text-center">
                                    #
                                </th>
                                <th class="text-center">
                                    Date
                                </th>
                                <th class="text-center">
                                    Name
                                </th>
                                <th class="text-center">
                                    Sets
                                </th>
                                <th class="text-center">
                                    Reps
                                </th>
                                <th class="text-center">
                                    Weight
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id='addr0'>
                                <td>
                                    1
                                </td>
                                <td>
                                    <input type="date" name='user0' placeholder='Date' class="form-control" />
                                </td>
                                <td>
                                    <select class="form-control" id="SelectedWorkoutDateForUser" name="SelectedWorkoutDateForUser" onchange="this.form.submit()">
                                        @foreach (var p in _exerciseRepository.GetAllRows())
                                        {
                                            <option>@p.ExName</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <input type="text" name='ip0' placeholder='Sets' class="form-control" />
                                </td>
                                <td>
                                    <input type="text" name='country0' placeholder='Reps' class="form-control" />
                                </td>
                                <td>
                                    <input type="text" name='ipDisp0' placeholder='Weight' class="form-control" />
                                </td>
                            </tr>
                            <tr id='addr1'></tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <a id="add_row" class="btn btn-default pull-left">Add Row</a><a id='delete_row' class="pull-right btn btn-default">Delete Row</a>
        </div>
        <div id="menu2" class="tab-pane fade">
            <h3>Menu 2</h3>
            <p>Some content in menu 2.</p>
        </div>
    </div>
</div>
